<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:App.Domain.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="860" d:DesignHeight="390"
        x:Class="App.Dialogs.ConfigDialog"
        Title="Настройки"
        Width="860"
        Height="390"
        x:DataType="models:GeneratingConfig"
        Icon="../Assets/Logo.ico"
        WindowStartupLocation="CenterOwner">
    <Grid ColumnDefinitions="*, *" RowDefinitions="*, Auto">
        <StackPanel
            Grid.Row="0" 
            Grid.Column="0" 
            Margin="10" 
            Spacing="10">
            
            <HeaderedContentControl Header="Поля">
                <Grid
                    RowDefinitions="Auto, Auto"
                    ColumnDefinitions="Auto, Auto, Auto, Auto">

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Верхнее" />
                    <NumericUpDown
                        Grid.Row="0"
                        Grid.Column="1"
                        Minimum="0"
                        Increment="0.25"
                        Value="{Binding MarginTop}" />

                    <Label
                        Grid.Row="0"
                        Grid.Column="2"
                        Content="Нижнее" />
                    <NumericUpDown
                        Grid.Row="0"
                        Grid.Column="3"
                        Minimum="0"
                        Increment="0.25"
                        Value="{Binding MarginBottom}" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Левое" />
                    <NumericUpDown
                        Grid.Row="1"
                        Grid.Column="1"
                        Minimum="0"
                        Increment="0.25"
                        Value="{Binding MarginLeft}" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="2"
                        Content="Правое" />
                    <NumericUpDown
                        Grid.Row="1"
                        Grid.Column="3"
                        Minimum="0"
                        Increment="0.25"
                        Value="{Binding MarginRight}" />

                </Grid>
            </HeaderedContentControl>

            <HeaderedContentControl Header="Шрифты">
                <Grid
                    RowDefinitions="Auto, Auto"
                    ColumnDefinitions="Auto, *">

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Заголовки" />
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        Width="300"
                        Text="{Binding MainFont}" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Код" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        Width="300"
                        Text="{Binding CodeFont}" />

                </Grid>
            </HeaderedContentControl>

            <HeaderedContentControl Header="Размер шрифта">
                <Grid
                    RowDefinitions="Auto"
                    ColumnDefinitions="Auto, *, Auto, *">

                    <Label
                        Grid.Column="0"
                        Content="Заголовки" />
                    <NumericUpDown
                        Grid.Column="1"
                        Minimum="0"
                        Increment="1"
                        Value="{Binding MainFontSize}" />

                    <Label
                        Grid.Column="2"
                        Content="Код" />
                    <NumericUpDown
                        Grid.Column="3"
                        Minimum="0"
                        Increment="1"
                        Value="{Binding CodeFontSize}" />

                </Grid>
            </HeaderedContentControl>
        </StackPanel>

        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="10"
            Spacing="10">

            <HeaderedContentControl Header="Отступы">
                <Grid
                    RowDefinitions="Auto"
                    ColumnDefinitions="Auto, *, Auto, *">

                    <Label
                        Grid.Column="0"
                        Content="Заголовки" />
                    <NumericUpDown
                        Grid.Column="1"
                        Minimum="0"
                        Increment="0.25"
                        Value="{Binding MainIndent}" />

                    <Label
                        Grid.Column="2"
                        Content="Код" />
                    <NumericUpDown
                        Grid.Column="3"
                        Minimum="0"
                        Increment="0.25"
                        Value="{Binding CodeIndent}" />

                </Grid>
            </HeaderedContentControl>

            <HeaderedContentControl Header="Междустрочный интервал">
                <Grid
                    RowDefinitions="Auto"
                    ColumnDefinitions="Auto, *, Auto, *">

                    <Label
                        Grid.Column="0"
                        Content="Заголовки" />
                    <NumericUpDown
                        Grid.Column="1"
                        Minimum="0"
                        Increment="0.25"
                        Value="{Binding MainLineSpacingMultiplier}" />

                    <Label
                        Grid.Column="2"
                        Content="Код" />
                    <NumericUpDown
                        Grid.Column="3"
                        Minimum="0"
                        Increment="0.25"
                        Value="{Binding CodeLineSpacingMultiplier}" />

                </Grid>
            </HeaderedContentControl>

            <HeaderedContentControl Header="Интервалы заголовка">
                <Grid
                    RowDefinitions="Auto"
                    ColumnDefinitions="Auto, *, Auto, *">

                    <Label
                        Grid.Column="0"
                        Content="До абзаца" />
                    <ToggleSwitch
                        Grid.Column="1"
                        IsChecked="{Binding IsIntervalBeforeTitle}" />

                    <Label
                        Grid.Column="2"
                        Content="После абзаца" />
                    <ToggleSwitch
                        Grid.Column="3"
                        IsChecked="{Binding IsIntervalAfterTitle}" />

                </Grid>
            </HeaderedContentControl>

            <HeaderedContentControl Header="Дополнительные настройки">
                <Grid
                    RowDefinitions="Auto, Auto"
                    ColumnDefinitions="*, Auto">

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Обрамлять код таблицей" />
                    <ToggleSwitch
                        Grid.Row="0"
                        Grid.Column="1"
                        IsChecked="{Binding IsCodeInTable}" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Открывать файл после сохранения" />
                    <ToggleSwitch
                        Grid.Row="1"
                        Grid.Column="1"
                        IsChecked="{Binding IsOpenAfterSave}" />

                </Grid>
            </HeaderedContentControl>
        </StackPanel>

        <DockPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            LastChildFill="False">
            
            <Button
                DockPanel.Dock="Left"
                Content="По умолчанию" 
                Click="DefaultButton_OnClick"/>
            <Button
                DockPanel.Dock="Right"
                Content="Отмена" 
                Click="CancelButton_OnClick"/>
            <Button
                DockPanel.Dock="Right"
                Width="80"
                Content="ОК" 
                Click="OkButton_OnClick"/>
        </DockPanel>
    </Grid>
</Window>